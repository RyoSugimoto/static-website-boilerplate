header#global-header.global-header
  .global-header__stack

    if headerNavigationMode === 'only-drawer'
      .global-header__logo(data-drawer-inert)
        +link(`${root}`)(aria-label="ホーム")
          +logo()
    else
      .global-header__logo
        +link(`${root}`)(aria-label="ホーム")
          +logo()

    if headerNavigationMode !== 'only-drawer'
      .global-header__navigation(data-drawer-inert)
        +menu('main-menu-items')(class='header-navigation')

    if headerNavigationMode !== 'no-drawer'
      include /partials/drawer-trigger.pug

  //- Drawer
  if (headerNavigationMode !== 'no-drawer' && headerNavigationMode !== 'only-drawer')
    include /partials/drawer.pug

//- Drawer
if headerNavigationMode === 'only-drawer'
  include /partials/drawer.pug
